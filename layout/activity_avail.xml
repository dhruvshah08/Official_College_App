<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".avail">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-thin"
        android:text="Select Date"
        android:textColor="@color/colorPurple"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="450dp"
        android:layout_height="354dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:clickable="false"
        android:background="@drawable/buttonshape"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Select Slot"
        android:textColor="@color/colorPurple"
        android:textSize="35sp"
        android:id="@+id/slot"
        android:textStyle="bold" />


    <Button
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:text="Book 9-12"
        android:layout_marginLeft="15dp"
        android:id="@+id/slot_button1"
        android:background="@drawable/button_9_12"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/slot"/>


    <Button
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:text="Book 12-3"
        android:layout_toRightOf="@id/slot_button1"
        android:id="@+id/slot_button2"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_12_3"
        android:layout_below="@+id/slot"/>
    <Button
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:text="Book 3-6"
        android:layout_toRightOf="@id/slot_button2"
        android:layout_marginLeft="-4dp"
        android:background="@drawable/button_3_6"
        android:id="@+id/slot_button3"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/slot"/>





